{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "TodaysADF002"
		},
		"ADF2AzureSqlDatabase_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ADF2AzureSqlDatabase'"
		},
		"MySql1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'MySql1'"
		},
		"ADF2AzureSqlDatabase_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "todayssqlserver01.database.windows.net"
		},
		"ADF2AzureSqlDatabase_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "mypracticedbserver1"
		},
		"ADF2AzureSqlDatabase_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "Amin_001"
		},
		"MySql1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "localhost"
		},
		"MySql1_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "practice_db"
		},
		"MySql1_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "root"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "TodaysADF002_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ADF2AzureSqlDatabase_password": {
						"value": "[parameters('ADF2AzureSqlDatabase_password')]"
					},
					"MySql1_password": {
						"value": "[parameters('MySql1_password')]"
					},
					"ADF2AzureSqlDatabase_properties_typeProperties_server": {
						"value": "[parameters('ADF2AzureSqlDatabase_properties_typeProperties_server')]"
					},
					"ADF2AzureSqlDatabase_properties_typeProperties_database": {
						"value": "[parameters('ADF2AzureSqlDatabase_properties_typeProperties_database')]"
					},
					"ADF2AzureSqlDatabase_properties_typeProperties_userName": {
						"value": "[parameters('ADF2AzureSqlDatabase_properties_typeProperties_userName')]"
					},
					"MySql1_properties_typeProperties_server": {
						"value": "[parameters('MySql1_properties_typeProperties_server')]"
					},
					"MySql1_properties_typeProperties_database": {
						"value": "[parameters('MySql1_properties_typeProperties_database')]"
					},
					"MySql1_properties_typeProperties_username": {
						"value": "[parameters('MySql1_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}